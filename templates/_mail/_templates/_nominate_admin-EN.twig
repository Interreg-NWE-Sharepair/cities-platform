{% set baseUrl = craft.app.config.general.aliases.baseUrl %}
{% set city = craft.globals().getSetByHandle('siteInfo') %}
{% extends "_mail/_layout" %}

{# subject: A new repair hero has been nominated on {{ siteInfo.cityName }} #}
{# fromEmail: {{ craft.app.projectConfig.get('email.fromEmail') }} #}
{# fromName: {{ siteInfo.cityName }} #}
{# replyToEmail: {{ craft.app.projectConfig.get('email.fromEmail') }} #}
{# cc:  #}
{# bcc: #}
{# includeAttachments: true #}
{# presetAssets: 42,67 #}
{# description: #}

	{% block title %}
{{ 'A new repair hero has been nominated on'|t }} {{ city.cityName }}
{% endblock %}

	{% block content %}
		<p>
		{{ 'Hi'|t }},
	</p>
		<p>
	{{ "A new repair hero has been nominated on"|t }} {{ city.cityName }}{{ ". They have shared the following details:"|t }}
	</p>
		<ul>
			{% for field in allFields|filter(field => field.handle != 'terms' and field.handle != 'data') %}
				<li>
					<strong>
				{{ field.label }}
				</strong>
				<br>
			{{ field.getValueAsString() }}
		</li>
	{% endfor %}
	</ul>
		<p>
	{{ 'Thanks for reaching out to this repair hero, for introducing them to the community and activating their account.'|t }}
</p>{% endblock %}
