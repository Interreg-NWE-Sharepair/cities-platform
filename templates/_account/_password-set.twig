{% extends "_layout.twig" %}

{% block breadcrumbs %}{% endblock %}

{% block content %}
    <div class="section section--light">
        <div class="container">
            <h1>{{"Set password"|t}}</h1>
        </div>
    </div>
    <div class="section section--default">
        <div class="container">
            <form method="post" class="p-12 mt-6 text-white form bg-secondary rounded-panel md:w-1/2" accept-charset="UTF-8">
                {{ csrfInput() }}
                {{ actionInput('users/set-password') }}
                {% set setPasswordConfirmation = craft.entries.section('setPasswordConfirmation').one() %}
                {{ redirectInput(setPasswordConfirmation.getUrl()) }}
                {{ hiddenInput('code', code) }}
                {{ hiddenInput('id', id) }}

                {% if errors is defined %}
                    {% for error in errors %}
                        <div class="relative px-4 py-3 text-red-700 bg-red-100 border border-red-400 rounded" role="alert">
                            <span class="block sm:inline">{{ error }}</span>
                        </div>
                    {% endfor %}
                {% endif %}

                <div class="block mb-6">
                    <label class="text-white form__label" for="newPassword">{{ 'Kies een wachtwoord'|t }}</label>
                    <input class="border-0 rounded-sm form__input" id="newPassword" type="password" name="newPassword" placeholder="{{ 'Wachtwoord'|t }}" required>
                </div>
                <div class="block">
                    <button type="submit" class="btn btn--secondary-inverse btn--ext">{{ 'Wachtwoord wijzigen'|t }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}