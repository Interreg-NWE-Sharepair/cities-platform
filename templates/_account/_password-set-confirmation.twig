{% extends "_layout.twig" %}

{% block breadcrumbs %}{% endblock %}

{% block content %}
    <div class="section section--light">
        <div class="container">
            <h1>{{ entry.title }}</h1>
            {{ entry.intro }}
        </div>
    </div>

    {% include ['_snippet/_content/_contentBuilder/_' ~ currentSite.handle ~'.twig', '_snippet/_content/_contentBuilder/_default.twig']
        with {
        settings : {
            section: 'section',
            container: 'container',
        }
    } %}
{% endblock %}