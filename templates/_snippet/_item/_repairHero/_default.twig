<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3">
	<div class="relative min-h-full overflow-hidden transition duration-300 ease-in-out shadow hover:shadow-lg">
		{% if hero.photo|length %}
			<div>
				{% set optimizedImage = hero.photo %}
				<picture>
					{% if craft.imageOptimize.serverSupportsWebP() and currentUser.photo|first.extension != 'svg' %}
						<source data-srcset="{{ optimizedImage.srcsetWebP() }}"
								sizes="(max-width: 479px) 95vw, (min-width: 480px) and (max-width: 659px) 448px, (min-width: 660px) and (max-width: 819px) 628px, (min-width: 820px) and (max-width: 979px) 378px, (min-width: 980px) and (max-width: 1199px) 458px, (min-width: 1200px) 568px"
								type="image/webp"/>
					{% endif %}
					<img src="{{ optimizedImage.url() }}"
						 sizes="(max-width: 479px) 95vw, (min-width: 480px) and (max-width: 659px) 448px, (min-width: 660px) and (max-width: 819px) 628px, (min-width: 820px) and (max-width: 979px) 378px, (min-width: 980px) and (max-width: 1199px) 458px, (min-width: 1200px) 568px"
						 alt="{{ currentUser.photo|first.imageCaption ?? currentUser.photo|first.title ?? currentUser.lastName }}"
						 class="lazyload"/>
				</picture>
			</div>
		{% endif %}
		<div class="px-6 py-4">
			<h3 class="mb-2 text-xl font-bold">
				<a href="repair-hero/{{ hero.id }}">
					{{ hero.firstName }}
					{{ hero.lastName }}
				</a>
			</h3>
			<p>{{ hero.function }}</p>
		</div>
	</div>
</div>
