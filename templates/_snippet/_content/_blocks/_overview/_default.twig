{% if block.blockTitle|length %}
	<h2 id="{{ craft.statik.slugify(block.blockTitle) }}">{{ block.blockTitle }}</h2>
{% endif %}
<div class="flex flex-wrap -mx-4">
	{% for overviewEntry in block.entries.all() %}
		<div class="flex w-full px-3 mb-4 sm:w-1/2 md:w-1/3">
			<div class="relative flex flex-col w-full min-h-full overflow-hidden transition duration-300 ease-in-out rounded-card card group bg-light">
				<div class="flex flex-col flex-auto w-full p-4 md:p-6 xl:p-8">
					<h3 class="mb-1 text-primary">
						<a href="{{ overviewEntry.url }}" class="link--extended hover:text-primary-hover hover:underline">{{ overviewEntry.overviewTitle ?? overviewEntry.title }}</a>
					</h3>
					<div class="my-4 redactor">{{ overviewEntry.overviewDescription ?? (overviewEntry.intro ?? '')|striptags|truncate(140)|raw }}</div>
					<span class="mt-auto link link--ext group-hover:no-underline group-hover:text-primary-hover">{{ 'Lees meer'|t }}</span>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
